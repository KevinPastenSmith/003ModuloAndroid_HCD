<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdministrarProyectosGuardados"
    android:background="@android:color/darker_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_proyectosGuardados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_administrarProyectosGuardados_strings"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:layout_margin="8dp"
            />

        <ListView
            android:id="@+id/lv_proyectosGuardados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_proyectosGuardados"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>




</ScrollView>