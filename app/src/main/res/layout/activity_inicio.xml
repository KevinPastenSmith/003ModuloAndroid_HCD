<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".Inicio">

    <TextView
        android:id="@+id/tv_inicio_bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/tv_Bienvenido"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/linear_inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_inicio_bienvenido"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_inicio_nuevo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="@string/btn_inicio_nuevo_String"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_inicio_administrarProyectos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="@string/btn_inicio_administrarDatos_String"
            android:layout_weight="1.2"
            />

        <Button
            android:id="@+id/btn_inicio_proyectosComunidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/btn_inicio_proyectosComunidad_String"
            android:layout_weight="1"
            />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/framelayout_Inicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_inicio">

    </FrameLayout>

</RelativeLayout>